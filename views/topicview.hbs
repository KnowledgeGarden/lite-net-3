<style>
  #mypara {
    width: 800px; border-style: solid; border: 1px solid green;
  }
  #mypara:hover {
    background-color: rgba(255, 255, 0, 0.801);
  }
</style>

{{#if source}}
    <h2>Relation: {{label}}</h2>
{{else}}
    <h2>Topic: {{label}}</h2>
{{/if}}
{{#if isAuthenticated}}
    {{> air_form}}
    <hr>
{{/if}}
{{#if source}}
    <h3>Source Topic: {{{source}}}</h3>
    <h3>Target Topic: {{{target}}}</h3>
{{/if}}
{{#if bodylist}}
    <hr>
    <h3>Body</h3>
    <div style="overflow-y: auto; height:200px;">
    {{#each bodylist}}
        <div id="mypara">
            {{{this}}}
        </div><br/>
        {{/each}}
    </div>
{{/if}}
{{#if urllist}}
<h3>Resources</h3>
    {{#each urllist}}
        <a href="{{this}}">{{this}}</a><br/>
    {{/each}}
{{/if}}
<h3>Backlinks</h3>
<div style="overflow-y: auto; height:400px;">
    {{#each backlinks}}
        <div id="mypara">
            {{{this}}}
        </div><br/>
    {{/each}}
</div>
<div style="display: none;">{{jsonSource}}</div>